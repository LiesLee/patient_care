<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.lieslee.patient_care"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".application.PatientCareApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".module.common.ui.activity.MainActivity" android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <activity android:name=".module.news.ui.activity.NewsDetailActivity" android:screenOrientation="portrait">

        </activity>
    </application>

</manifest>