<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:visibility="visible"
        android:background="#f2f2f2" />

    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

            <!-- 输入键盘 -->
            <GridView
                android:id="@+id/gv_keybord"
                android:background="#f2f2f2"
                android:scrollbars="none"
                android:horizontalSpacing="0.5dp"
                android:verticalSpacing="0.5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="3" />

        <LinearLayout
            android:layout_weight="3"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="2"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_confirm_2"
                    android:text="确认"
                    android:textColor="@color/selector_gird_item_confirm_text"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:background="@drawable/selector_gird_item_confirm"
                    android:layout_width="61.5dp"
                    android:layout_height="135.5dp" />
            </LinearLayout>



            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_clean_up"
                    android:text="清空"
                    android:textColor="#333333"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:background="@drawable/selector_gird_delete"
                    android:layout_width="61.5dp"
                    android:layout_height="61.5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_backspace"
                    android:text="删除"
                    android:gravity="center"
                    android:textColor="#333333"
                    android:textSize="14dp"
                    android:background="@drawable/selector_gird_delete"
                    android:clickable="true"
                    android:layout_width="61dp"
                    android:layout_height="61dp" />
            </LinearLayout>



        </LinearLayout>


    </LinearLayout>


    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:visibility="visible"
        android:background="#f2f2f2" />

    <TextView
        android:id="@+id/tv_confirm"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:gravity="center"
        android:clickable="true"
        android:background="@color/golden"
        android:layout_width="match_parent"
        android:layout_height="40dp" />







</LinearLayout>